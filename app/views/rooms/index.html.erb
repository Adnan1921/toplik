<%= render "shared/navbar" %>

<section id="room" class="row intro-div no-gutters">

    <% @rooms.each do |room| %>
    <% if room.thumbnail_image.attached? %>>
      <div class="col-md-4 col-sm-12 col-xs-12 fill fill-res" style="background-image: linear-gradient(0deg, rgba(29, 29, 29, 0.7), rgba(29, 29, 29, 0.7)), url('<%= rails_blob_url(room.thumbnail_image) %>');">
      <% end %>
        <div class="room" >
        <h2 class="room-title"><%= room.name %>
</h2>
        <p class="room-text">     <%= room.description %>
</p>
</div>
      <div class="d-flex justify-content-center">

     <%= link_to room , class: "btn-get-room" do %>
        More Information
             <% end %>

      </div>
       

 <%= link_to 'Show', room %>
        <%= link_to 'Edit', edit_room_path(room) %>
       <%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %>

      </div>
     

    <% end %>





